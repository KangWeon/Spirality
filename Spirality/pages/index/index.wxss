.stv-container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}
#canvas {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: black;
}
.tool {
  position: absolute;
  display: flex;
  flex-direction: column;
  width: 80rpx;
  height: 100%;
  align-items: center;
  justify-content: space-around;
  background-color: #222222;
}
.tool-item {
  width: 50rpx;
  height: 50rpx;
}