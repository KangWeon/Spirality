.stv-container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}
#drawCanvas {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: black;
  z-index: -100;
}
.tool {
  position: absolute;
  display: flex;
  flex-direction: column;
  width: 80rpx;
  height: 100%;
  align-items: center;
  justify-content: space-around;
  background-color: #222222;
  z-index: 100;
}
.tool>view {
  display: flex;
  align-items: center;
  flex-direction: column;
  width: 100%;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  position: relative;
}
.tool>view:last-child {
  padding-bottom: 40rpx;
}
.tool>view:first-child {
  padding-top: 40rpx;
}
.tool-item {
  width: 50rpx;
  height: 50rpx;
}
.tool-item-bottom {
  width: 50rpx;
  height: 8rpx;
}



/* 颜色选择器 */
.color-picker {
  display: flex;
  flex-direction: column;
  position: absolute;
  left: 80rpx;
  top: 0rpx;
}
.color-picker-row {
  display: flex;
}
.color-picker-row>view {
  border: black 1rpx solid;
  width: 40rpx;
  height: 40rpx;
}

/* 阵列数修改器 */
.count-changer {
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: white; 
  left: 100rpx;
  top: 10rpx;
  border-radius: 20rpx;
  overflow: hidden;
}
.count-changer>view {
  font-size: 50rpx;
  min-width: 80rpx;
  text-align: center;
  font: bold;
  padding: 5rpx 5rpx 8rpx 5rpx;
  background-color: #ddd;
}
.count-changer>input {
  text-align: center;
  min-width: 100rpx;
  height: 100%;
}